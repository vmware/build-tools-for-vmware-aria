<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.vmware.pscoe.o11n</groupId>
		<artifactId>base-packages-parent</artifactId>
		<version>${revision}</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<groupId>com.vmware.pscoe.vcf</groupId>
	<artifactId>auto-modern-package</artifactId>
	<name>${project.artifactId}</name>
	<packaging>pom</packaging>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>flatten-maven-plugin</artifactId>
				<inherited>false</inherited>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<inherited>false</inherited>
			</plugin>
			<plugin>
				<groupId>com.vmware.pscoe.maven.plugins</groupId>
				<artifactId>vcf-auto-modern-package-maven-plugin</artifactId>
				<version>${revision}</version>
				<extensions>true</extensions>
				<configuration>
					<vcfa>
						<host>${vcfa.host}</host>
						<csp.host>${vcfa.csp.host}</csp.host>
						<port>${vcfa.port}</port>
						<username>${vcfa.username}</username>
						<password>${vcfa.password}</password>
						<serverId>${vcfa.serverId}</serverId>
						<project.name>${vcfa.project.name}</project.name>
						<org.name>${vcfa.org.name}</org.name>
						<refresh.token>${vcfa.refresh.token}</refresh.token>
						<bp.release>${vcfa.bp.release}</bp.release>
						<vro.integration>${vcfa.vro.integration}</vro.integration>
						<import.timeout>${vcfa.import.timeout}</import.timeout>
						<data.collection.delay.seconds>${vcfa.data.collection.delay.seconds}</data.collection.delay.seconds>
						<proxy>${vcfa.proxy}</proxy>
						<cloud.proxy.name>${vcfa.cloud.proxy.name}</cloud.proxy.name>
					</vcfa>
					<ignoreSslCertificate>${vrealize.ssl.ignore.certificate}</ignoreSslCertificate>
					<ignoreSslHostname>${vrealize.ssl.ignore.hostname}</ignoreSslHostname>
					<socketTimeout>${vrealize.socket.timeout}</socketTimeout>
					<connectionTimeout>${vrealize.connection.timeout}</connectionTimeout>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<properties>
		<main.basedir>${project.baseUri}../../../</main.basedir>
		<!-- checksum calculation properties -->
		<checksum.definitions>content,packages</checksum.definitions>

		<checksum.contentEnabled>true</checksum.contentEnabled>
		<checksum.contentDir>src/main/resources</checksum.contentDir>
		<checksum.contentGlob>*</checksum.contentGlob>
		<!-- <checksum.contentExcludes>\.js$,.element_info\.xml</checksum.contentExcludes> -->

		<checksum.packagesEnabled>true</checksum.packagesEnabled>
		<checksum.packagesDir>target</checksum.packagesDir>
		<checksum.packagesGlob>*.vcfam</checksum.packagesGlob>
	</properties>
</project>
