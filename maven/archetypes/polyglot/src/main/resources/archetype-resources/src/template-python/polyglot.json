{
  "platform": {
#if ( $type == "vro" )
    "runtime": "python:3.10",
#else
    "runtime": "python",
#end
    "action": "auto",
    "tags": [],
    "entrypoint": "handler.handler",
    "base": "out"
  },
#if ( $type == "vro" )
  "vro": {
    "module": "${groupId}",
    "inputs": {
      "limit": "number",
      "vraEndpoint": "CompositeType(host:string,base:string):VraEndpointType"
    },
    "outputType": "Array/string"
  },
#elseif ( $type == "abx" )
  "abx": {
    "inputs": {
      "limit": "",
      "vraEndpoint": ""
    }
  },
#end
  "files": ["%out", "!**/package.json", "!**/polyglot.json", "!**/requirements.txt"]
}
