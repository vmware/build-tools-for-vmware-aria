{
  "name": "${artifactId}",
  "version": "${version}",
  "description": "Autogenerated ${runtime} action",
  "private": true,
  "scripts": {
    "build": "polyglotpkg --env ${type}",
    "clean": "run-script-os",
    "clean:win32": "rmdir /S /Q out dist tmp || echo Nothing to clean",
    "clean:default": "rm -Rf out dist tmp",
    "test": "echo \"Error: no test specified\""
  },
  "keywords": [
    "polyglot",
    "package",
    "${type}",
    "${runtime}"
  ],
  "author": "VMware WWCoE",
  "license": "VMware Confidential",
  "devDependencies": {
#if ( $runtime == "nodejs" )
    "@types/node": "^14.0.13",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
#end
    "run-script-os": "^1.1.6"
  },
  "dependencies": {
#if ( $runtime == "nodejs" )
    "axios": "^0.21.2"
#end
  },
  "platform": {
    "runtime": "${runtime}",
    "action": "${artifactId}",
    "tags": [],
#if ( $runtime == "python" )
    "entrypoint": "handler.handler",
    "base": "out"
#else
    "entrypoint": "out/handler.handler"
#end
  },
#if ( $type == "vro" )
  "vro": {
    "module": "${groupId}",
    "inputs": {
      "limit": "number",
      "vraEndpoint": "CompositeType(host:string,base:string):VraEndpointType"
    },
    "outputType": "Array/string"
  },
#elseif ( $type == "abx" )
  "abx": {
    "inputs": {
      "limit": "",
      "vraEndpoint": ""
    }
  },
#end
#if ( $runtime == "nodejs" )
  "files": ["src", "out", "*.js", "!package.json"]
#elseif ( $runtime == "python" )
  "files": ["out", "!package.json"]
#elseif ( $runtime == "powershell" )
  "files": ["out", "!package.json"]
#end
}
